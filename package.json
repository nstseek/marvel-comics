{
  "name": "softdesign-test",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=10.22.1"
  },
  "dependencies": {
    "@nstseek/react-forms": "^1.1.2",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^12.19.12",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "@types/react-redux": "^7.1.15",
    "@types/react-router-dom": "^5.1.7",
    "node-sass": "^4.14.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-particles-js": "^3.4.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "redux-logger": "^3.0.6",
    "typescript": "^4.1.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "test": "react-scripts test --watchAll=false",
    "test:watch": "react-scripts test",
    "test:report": "react-scripts test --reporters=jest-junit --reporters=default --watchAll=false",
    "prettier": "prettier --check \"src/**/*.scss\" \"src/**/*.ts\" \"src/**/*.tsx\"",
    "prettier:fix": "prettier --write \"src/**/*.scss\" \"src/**/*.ts\" \"src/**/*.tsx\"",
    "lint": "eslint src/**/*.tsx src/**/*.ts && stylelint \"**/*.scss\" --config .stylelintrc",
    "lint:fix": "eslint src/**/*.tsx src/**/*.ts --fix && stylelint \"**/*.scss\" --config .stylelintrc --fix",
    "check": "npm run lint && npm run prettier && npm run test && npm run build",
    "check:ci": "npm run lint && npm run prettier && npm run test:report && npm run build",
    "check:fix": "npm run lint:fix && npm run prettier:fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.18.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.3.1",
    "enzyme": "^3.11.0",
    "eslint": "^7.13.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "jest-junit": "^12.0.0",
    "prettier": "^2.1.2"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "always",
    "jsxBracketSameLine": true,
    "jsxSingleQuote": true,
    "printWidth": 80,
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run check"
    }
  }
}
